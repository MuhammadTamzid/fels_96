<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("logo.png", alt: "", class:"logo-img"), root_path %>
    <%= link_to t(:system_name), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(:home), root_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to t(:users), users_path %></li>
          <li><%= link_to t(:new_category), new_admin_category_path %></li>
          <li><%= link_to t(:logout), :destroy_user_session, method: :delete %></li>
        <% else %>
          <li><%= link_to t(:login), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
