<% provide :title, @user.name %>
<h1><%= t "user_profile" %></h1>
<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div>
        <% if can? :update, @user %>
          <%= link_to t(:edit), edit_user_registration_path,
            class: "btn btn-default" %>
        <% end %>
      </div>
    </div>
    <div class="panel-body">
      <%= gravatar_for @user %>
      <label><%= t "name" %></label>
      <p class="form-control profile_align"><%= @user.name %></p>
      <label><%= t "email" %></label>
      <p class="form-control profile_align"><%= @user.email %></p>
    </div>
    <div class="panel-footer panel-course-footer">
      <% if can? :destroy, @user %>
        <%= link_to t(:cancel_account),
          user_registration_path,
          data: {confirm: t(:are_you_sure)},
          method: :delete,
          class: "btn btn-danger" %>
      <% end %>

      <% unless @user == current_user %>
        <% if current_user.following?(@user) %>
          <%= link_to t(:follow), follow_path(@user.id), remote: true,
            method: :put, class: "btn follow btn-primary hidden" %>
          <%= link_to t(:unfollow), follow_path(@user.id), remote: true,
            method: :delete, class: "btn unfollow btn-default" %>
        <% else %>
          <%= link_to t(:follow), follow_path(@user.id), remote: true,
            method: :put, class: "btn follow btn-primary" %>
          <%= link_to t(:unfollow), follow_path(@user.id), remote: true,
            method: :delete, class: "btn unfollow btn-default hidden" %>
        <% end %>
      <% end %>
      <div class="pull-right">
        <button class="btn btn-default" id="show-following">
          <%= t "following" %>
        </button>
        <button class="btn btn-default" id="show-followers">
          <%= t "followers" %>
        </button>
      </div>
    </div>
  </div>

  <div class="followers well" id="followers">
    <button type="button" class="close" id="hide-followers">&times;</button>
    <hr>
    <% if @user.followers.any? %>
      <% @user.followers.each do |follower| %>
        <p>
          <%= gravatar_for follower, size: 40 %>
          <%= link_to follower.name, follower %>
        </p>
        <hr>
      <% end %>
    <% else %>
      <h2><code><%= t "no_followers" %></code></h2>
    <% end %>
  </div>

  <div class="following well" id="following">
    <button type="button" class="close" id="hide-following">&times;</button>
    <hr>
    <% if @user.following.any? %>
      <% @user.following.each do |following| %>
        <p>
          <%= gravatar_for following, size: 40 %>
          <%= link_to following.name, following %>
        </p>
        <hr>
      <% end %>
    <% else %>
      <h2><code><%= t "not_following" %></code></h2>
    <% end %>
  </div>

  <h1><%= t "activities" %></h1>

  <% @activities.each do |activity| %>
    <%= link_to activity.owner.name, activity.owner %>
    <% if activity.key == "User.follow" %>
      <%= t "h_follow" %> <%= link_to activity.trackable.name,
        activity.trackable %><br>
    <% elsif activity.key == "User.unfollow" %>
      <%= t "h_unfollow" %> <%= link_to activity.trackable.name,
        activity.trackable %><br>
    <% else %>
      <%= render_activity activity %><br>
    <% end %>
  <% end %>
</div>
